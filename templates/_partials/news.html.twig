<div class="row mt-4">
        {% for new in news %}
            <a class="col-md-4 mb-2" href="{{ path('article_show', {id: new.id, 'slug': new.slug}) }}">
                <div class="card h-100 img-fluid card border-left-primary shadow h-100 py-2">
                        <img class="card-img-top" style="height : 26rem; width: 100%;" 
                        src="{{ new.cover }}" alt="{{ new.title|title }}">
                    <div class="card-body">
                        <h5><strong>{{ new.title|title }}</strong></h5>
                    </div>
                    <div class="card-footer">
                        <small >Le {{ new.publishedAt ? new.publishedAt|date("d m Y") : ""}}</small>
                    </div>
                </div>
            </a>
        {% endfor %}
    </div>

    <div class="d-flex justify-content-center">
        {{ knp_pagination_render(news) }}
    </div>